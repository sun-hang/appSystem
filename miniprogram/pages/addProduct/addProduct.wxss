.addproduct_container {
  width: 100%;
}

.addproduct_inner_container {
  width: 100%;
  margin: 0 auto;
}

.titleAnd_imgUpload_container {
  padding-top: 20rpx;
  width: 100%;
  background-color: #fff;
}

.titleAnd_imgUpload_container .title_box {
  width: 96%;
  margin: 0 auto;
  padding: 10rpx 15rpx;
}

.titleAnd_imgUpload_container .title_box textarea {
  font-size: .9rem;
  width: 100%;
}

.length {
  margin-top: 10rpx;
  text-align: right;
  color: #a7a4a4;
  font-size: .9rem;
}

.product_content_box {
  width: 96%;
  margin: 30rpx auto 20rpx;
  background-color: #fff;
  border-radius: 12rpx;
  box-sizing: border-box;
  padding: 15rpx 25rpx;
}

.product_item_box {
  display: flex;
  justify-content: space-between;
  font-size: 26rpx;
  margin: 30rpx 0;
}

.product_item_box .right {
  display: flex;
  align-items: center;
}

.product_item_box .right input {
  text-align: right;
  font-size: 26rpx;
  margin-right: 10rpx;
}

.product_item_box .required {
  color: #f40;
}

.product_detail_container {
  width: 96%;
  margin: 20rpx auto;
  background-color: #fff;
  border-radius: 12rpx;
  padding: 20rpx 25rpx;
  box-sizing: border-box;
}

.product_detail_container .title_box {
  margin-bottom: 15rpx;
}

.product_detail_container textarea {
  font-size: .9rem;
  width: 100%;
}

.product_tag_container {
  width: 96%;
  margin: 20rpx auto;
  box-sizing: border-box;
  padding: 20rpx 25rpx;
  border-radius: 12rpx;
  background-color: #fff;
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-wrap: wrap;
}

.product_tag_container .right_select {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #a7a4a4;
}

.product_tag_container .tag_item_container {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  margin-top: 25rpx;
}

.product_state_container {
  width: 96%;
  margin: 20rpx auto;
  background-color: #fff;
  border-radius: 12rpx;
  box-sizing: border-box;
  padding: 15rpx 25rpx 10rpx;
}

.product_state_container .left {
  font-size: 30rpx;
}

.product_option_container {
  width: 96%;
  margin: 20rpx auto 230rpx;
  background-color: #fff;
  border-radius: 12rpx;
  box-sizing: border-box;
  padding: 25rpx 25rpx;
  font-size: 30rpx;
}

.product_option_container .option_title_box {
  display: flex;
  justify-content: space-between;
}

.product_option_container .option_content_box {
  margin-top: 20rpx;
  font-size: 28rpx;
  padding: 10rpx 20rpx;
}

.product_option_container .option_content_box .option_item {
  margin: 20rpx 0;
  border-bottom: 1px solid #eee;
  padding-bottom: 20rpx;
}

.product_option_container .option_content_box .option_item .option_item_name {
  display: flex;
  justify-content: space-between;
  margin-bottom: 15rpx;
}

.product_option_container .option_content_box .option_item .option_item_name .price,
.product_option_container .option_content_box .option_item .stock_box {
  color: #a7a4a4;
}

.product_bottom_container {
  position: fixed;
  bottom: 0;
  left: 0;
  height: 190rpx;
  width: 100%;
  background-color: #FAFAFA;
  box-shadow: -1px -1px 5px rgba(0, 0, 0, .1);
}

.product_bottom_container .title_menu_box {
  height: 80rpx;
  width: 100%;
  border-bottom: 1px solid #eee;
  box-sizing: border-box;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  padding-left: 20rpx;
}

.product_bottom_container .title_menu_box text {
  margin: 0 20rpx;
  padding: 10rpx 30rpx;
  border-radius: 25rpx;
  background-color: #fff;
  box-shadow: -1px -1px 5px rgba(0, 0, 0, .1);
}

.product_bottom_container .btns_box {
  height: 110rpx;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  padding-right: 40rpx;
  box-sizing: border-box;
}

.product_bottom_container .btns_box text {
  padding: 12rpx 35rpx;
  background-color: #FF6A49;
  color: #fff;
  border-radius: 25rpx;
}
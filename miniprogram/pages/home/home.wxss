.navigation_center_box {
  width: 60vw;
  display: flex;
  align-items: center;
  font-size: 1rem;
}

.navigation_center_box image {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.navigation_center_box text {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.my_navigation .weui-navigation-bar__center {
  /* transform: translateX(-62%); */
  left: 30rpx;
  position: absolute;
  justify-content: start;
}

.home_title_box {
  width: 100%;
  background-color: #FD6F57;
}

.home_title_inner_box {
  width: 94%;
  margin: 0 auto;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
  padding: 40rpx 20rpx;
  color: #FFEFE9;
  opacity: 1;
  /* transition: all .3s; */
}
.home_title_inner_box.active{
  opacity: 0;
}
.home_title_inner_box .left .navigation_center_box image{
  height: 80rpx;
  width: 80rpx;
}
.home_title_inner_box .left .navigation_center_box .dian{
  font-size: .7rem;
  display: flex;
  align-items: center;
}

.home_title_inner_box .left .navigation_center_box .dian mp-icon{
  margin-left: 6rpx;
}

.home_title_inner_box .right{
  background-color: rgba(255, 255, 255, .2);
  padding: 1rpx 25rpx 6rpx;
  /* display: flex; */
  /* justify-content: space-between; */
  /* align-items: center; */
  border-radius: 14rpx;
}

.home_title_inner_box .right > text{
  font-size: 24rpx;
  margin-left: 15rpx;
}
.addItem_container {
  width: 100%;
  /*  */
  font-size: 28rpx;
  border: 1px solid #a0a0fc;
  box-sizing: border-box;
  border-radius: 14rpx;
  padding: 4rpx 20rpx 8rpx;
}

.addItem_inner_container {
  width: 100%;
  display: flex;
  align-items: center;
  color: #a0a0fc;
  box-sizing: border-box;
}

.addItem_input_box,
.addItem_text_box {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.addItem_text_box{
  justify-content: flex-start;
}
.addItem_input_box input {
  width: 80%;
}